{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./docs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["docs/*"]
    },
    "types": ["jest", "node"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["**/*.md, **/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
