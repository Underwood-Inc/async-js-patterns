{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "docs/.vitepress/config.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "docs/.vitepress/cache",
    "docs/.vitepress/dist",
    "docs/**/*.test.ts"
  ]
}
