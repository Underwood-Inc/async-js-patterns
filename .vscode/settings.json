{
    "terminal.integrated.scrollback": 10000,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.markdownlint": "explicit"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "markdown"
  ],
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "markdown"
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "jest.autoRun": "off",
  "[markdown]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "never",
      "source.fixAll.markdownlint": "never"
    }
  },
  "markdownlint.config": {
    "default": true,
    "MD013": { "line_length": 250, "code_blocks": false, "tables": false }
  },
  "cSpell.words": ["shiki"]
}
