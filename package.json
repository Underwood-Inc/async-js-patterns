{
  "name": "web-patterns",
  "version": "1.0.0",
  "description": "A comprehensive guide to async JavaScript, TypeScript patterns, and modern styling",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist coverage docs/api",
    "commit": "git-cz",
    "docs:build": "npm run generate:preview && vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:preview": "vitepress preview docs",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md}\"",
    "generate:preview": "tsx docs/.vitepress/scripts/generatePreviewImage.ts",
    "lint:fix": "eslint . --fix && markdownlint \"**/*.md\" --ignore node_modules --fix",
    "lint": "eslint . && markdownlint \"**/*.md\" --ignore node_modules",
    "postinstall": "npm run prepare",
    "prebuild": "npm run clean",
    "precommit": "lint-staged",
    "prepare": "husky",
    "test:coverage": "vitest run --coverage",
    "test:theme:watch": "vitest docs/.vitepress/theme/__tests__",
    "test:theme": "vitest run docs/.vitepress/theme/__tests__",
    "test:watch": "vitest",
    "test": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "eslint --fix",
      "markdownlint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "javascript",
    "typescript",
    "async",
    "promises",
    "patterns",
    "vitepress",
    "css",
    "scss",
    "styling"
  ],
  "author": "Underwood Inc. - Michael Seaward",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^8.56.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vue/test-utils": "^2.4.0",
    "chalk": "5",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-markdown": "^3.0.1",
    "happy-dom": "^15.11.7",
    "husky": "^9.0.0",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.0",
    "markdownlint": "^0.33.0",
    "markdownlint-cli": "^0.39.0",
    "mermaid": "^11.4.1",
    "prettier": "^3.2.0",
    "puppeteer": "^23.10.1",
    "rimraf": "^5.0.0",
    "sass": "^1.82.0",
    "tsx": "^4.19.2",
    "typedoc": "^0.25.0",
    "typescript": "~5.5.0",
    "unplugin-vue-macros": "^2.13.5",
    "vitepress": "^1.0.0",
    "vitepress-plugin-mermaid": "^2.0.13",
    "vitest": "^2.1.8",
    "vue": "^3.4.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@braintree/sanitize-url": "^7.1.0",
    "@typescript-eslint/typescript-estree": "^8.17.0",
    "dayjs": "^1.11.10",
    "debug": "^4.4.0",
    "fuse.js": "^7.0.0",
    "gray-matter": "^4.0.3"
  },
  "packageManager": "pnpm@9.14.4+sha512.c8180b3fbe4e4bca02c94234717896b5529740a6cbadf19fa78254270403ea2f27d4e1d46a08a0f56c89b63dc8ebfd3ee53326da720273794e6200fcf0d184ab"
}
