{
  "name": "async-js-patterns",
  "version": "1.0.0",
  "description": "A comprehensive guide to async JavaScript patterns with implementations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.vue,.ts,.md",
    "lint:fix": "eslint . --ext .js,.vue,.ts,.md --fix",
    "format": "prettier --write \"src/**/*.ts\" \"docs/**/*.md\"",
    "commit": "git-cz",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "precommit": "lint-staged",
    "clean": "rimraf dist coverage docs/api",
    "prebuild": "npm run clean",
    "postinstall": "npm run prepare"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --findRelatedTests"
    ],
    "*.md": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [
    "javascript",
    "typescript",
    "async",
    "promises",
    "patterns",
    "vitepress"
  ],
  "author": "Underwood Inc. - Michael Seaward",
  "license": "CC-BY-4.0",
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint": "^9.16.0",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^3.4.1",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "typedoc": "^0.24.0",
    "typescript": "^5.0.0",
    "vitepress": "^1.5.0",
    "vue": "^3.5.13"
  },
  "directories": {
    "doc": "docs"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
