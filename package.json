{
  "name": "web-patterns",
  "version": "1.0.0",
  "description": "A comprehensive guide to async JavaScript, TypeScript patterns, and modern styling",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "npm run generate:preview && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . && markdownlint \"**/*.md\" --ignore node_modules",
    "lint:fix": "eslint . --fix && markdownlint \"**/*.md\" --ignore node_modules --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md}\"",
    "commit": "git-cz",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "precommit": "lint-staged",
    "clean": "rimraf dist coverage docs/api",
    "prebuild": "npm run clean",
    "postinstall": "npm run prepare",
    "generate:preview": "tsx docs/.vitepress/scripts/generatePreviewImage.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "eslint --fix",
      "markdownlint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "javascript",
    "typescript",
    "async",
    "promises",
    "patterns",
    "vitepress",
    "css",
    "scss",
    "styling"
  ],
  "author": "Underwood Inc. - Michael Seaward",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^8.56.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-markdown": "^3.0.1",
    "husky": "^9.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^15.2.0",
    "markdownlint": "^0.33.0",
    "markdownlint-cli": "^0.39.0",
    "prettier": "^3.2.0",
    "puppeteer": "^23.10.1",
    "rimraf": "^5.0.0",
    "sass": "^1.82.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.19.2",
    "typedoc": "^0.25.0",
    "typescript": "~5.5.0",
    "vitepress": "^1.0.0",
    "vue": "^3.4.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "dependencies": {
    "fuse.js": "^7.0.0",
    "gray-matter": "^4.0.3"
  }
}
